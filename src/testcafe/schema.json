{
  "id": "TestcafeBuilderSchema",
  "title": "TestCafe builder",
  "description": "TestCafe builder options",
  "properties": {
    "devServerTarget": {
      "type": "string",
      "description": "Dev server target to run tests against."
    },
    "src": {
      "type": "string",
      "description": "Tests to run: file or glob. You can use one or more file paths or glob patterns to specify which tests to run."
    },
    "browsers": {
      "type": "array",
      "description": "browsers",
      "items": {
        "type": "string",
        "description": "name of the browser"
      },
      "default": ["chrome"]
    },
    "reporter": {
      "type": "string",
      "description": "the reporter to use",
      "default": "spec"
    },
    "port": {
      "type": "number",
      "description": "The port to use to serve the application."
    },
    "host": {
      "type": "string",
      "description": "Host to listen on.",
      "default": "localhost"
    }
  }
}
