{
  "id": "TestcafeBuilderSchema",
  "title": "TestCafe builder",
  "description": "TestCafe builder options",
  "properties": {
    "devServerTarget": {
      "type": "string",
      "description": "Dev server target to run tests against."
    },
    "src": {
      "type": "string",
      "description": "Tests to run: file or glob. You can use one or more file paths or glob patterns to specify which tests to run."
    },
    "browsers": {
      "type": "array",
      "description": "browsers",
      "items": {
        "type": "string",
        "description": "name of the browser"
      },
      "default": ["chrome"]
    },
    "host": {
      "type": "string",
      "description": "Host to listen on.",
      "default": "localhost"
    },
    "port": {
      "type": "number",
      "description": "The port to use to serve the application."
    },
    "reporters": {
      "type": "array",
      "description": "the reporter to use",
      "items": {
        "type": "object",
        "description": "reporters"
      },
      "default": [{ "name": "spec" }]
    },
    "concurrency": {
      "type": "number",
      "description": ""
    },
    "screenshotsPath": {
      "type": "string",
      "description": ""
    },
    "screenshotsOnFails": {
      "type": "boolean",
      "description": ""
    },
    "screenshotsPathPattern": {
      "type": "string",
      "description": ""
    },
    "quarantineMode": {
      "type": "boolean",
      "description": ""
    },
    "debugMode": {
      "type": "boolean",
      "description": ""
    },
    "skipJsErrors": {
      "type": "boolean",
      "description": ""
    },
    "skipUncaughtErrors": {
      "type": "boolean",
      "description": ""
    },
    "debugOnFail": {
      "type": "boolean",
      "description": ""
    },
    "selectorTimeout": {
      "type": "number",
      "description": ""
    },
    "assertionTimeout": {
      "type": "number",
      "description": ""
    },
    "pageLoadTimeout": {
      "type": "number",
      "description": ""
    },
    "speed": {
      "type": "number",
      "description": ""
    },
    "ports": {
      "type": "array",
      "description": "",
      "items": {
        "type": "number",
        "description": ""
      }
    },
    "proxy": {
      "type": "string",
      "description": ""
    },
    "proxyBypass": {
      "type": "array",
      "description": "",
      "items": {
        "type": "string",
        "description": ""
      }
    },
    "disablePageReloads": {
      "type": "boolean",
      "description": ""
    },
    "dev": {
      "type": "boolean",
      "description": ""
    },
    "stopOnFirstFail": {
      "type": "boolean",
      "description": ""
    },
    "disableTestSyntaxValidation": {
      "type": "boolean",
      "description": ""
    },
    "color": {
      "type": "boolean",
      "description": ""
    },
    "NoColor": {
      "type": "boolean",
      "description": ""
    },
    "ssl": {
      "type": "string",
      "description": ""
    }
  }
}
